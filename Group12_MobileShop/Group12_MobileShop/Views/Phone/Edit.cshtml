            <input type="hidden" asp-for="Phone.PhoneId" />
            <div class="form-group">
                <label asp-for="Phone.ModelName" class="control-label"></label>
                <input asp-for="Phone.ModelName" class="form-control" />
                <span asp-validation-for="Phone.ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Manufacturer" class="control-label"></label>
                <input asp-for="Phone.Manufacturer" class="form-control" />
                <span asp-validation-for="Phone.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Price" class="control-label"></label>
                <input asp-for="Phone.Price" class="form-control" />
                <span asp-validation-for="Phone.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.Description" class="control-label"></label>
                <input asp-for="Phone.Description" class="form-control" />
                <span asp-validation-for="Phone.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.InStock" class="control-label"></label>
                <input asp-for="Phone.InStock" class="form-control" />
                <span asp-validation-for="Phone.InStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.ImageUrl" class="control-label"></label>
                <input asp-for="Phone.ImageUrl" class="form-control" />
                <span asp-validation-for="Phone.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
