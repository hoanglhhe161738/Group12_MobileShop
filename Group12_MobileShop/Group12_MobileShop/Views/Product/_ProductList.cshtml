@{
    Layout = null;
}

@model IEnumerable<Product>

@{

    <div class="container" style="height:100%;" id="ProductContainer">
        <div class="row row-cols-md-6">
            @foreach (var item in Model)
            {
                <div class="col" style="margin:2em;height: 20em;width:180px;display:flex;flex-direction:column;box-shadow: 2px 5px;border: 1px solid;border-radius: 5px;padding-top: 10px;">
                    <div style="width:80%;height:50%">
                        <img style="height:10em" src="@item.imageUrl" href="Link error" />
                    </div>
                    <b>@item.modelName</b>

                    <p>@item.price $</p>
                    <p>@item.description</p>
                    <div>
                    <button type="button" style="border-radius:2px; background-color:blue"> 
                        Details
                    </button>
                        <button style="border-radius:2px; background-color:red">
                        Order
                    </button>
                    </div>
                </div>

            }

        </div>


    </div>
}
